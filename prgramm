#include <stdio.h>
#include <string.h>


 void main(void){
     char str[100];
     char str1[100];
     char str2[100];
     int s=0, k=0, max=0, len;


     printf("Введите строку: ");
     gets(str);
     len = strlen(str);
     for (int i=0; i<=len; ++i)
      if (str[i] != ' ') {
          s=s+1;
          str1[k] = str[i];
          k=k+1;
      } else {
          if (s>max) {max=s; strcpy(str2, str1); strcpy(str1, "\0"); }
          s=0; k=0;
      }
     printf("%s\n", str2);
 }
